<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- Specify a welcome file -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet mapping for login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>org.nepalimarket.electronicshopproject.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Servlet mapping for registration -->
    <servlet>
        <servlet-name>CustomerRegistrationServlet</servlet-name>
        <servlet-class>org.nepalimarket.electronicshopproject.controller.CustomerRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerRegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GenerateReceiptServlet</servlet-name>
        <servlet-class>org.nepalimarket.electronicshopproject.controller.GenerateReceiptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenerateReceiptServlet</servlet-name>
        <url-pattern>/GenerateReceiptServlet</url-pattern>
    </servlet-mapping>


    <!-- Add more servlet mappings and configurations as needed -->

</web-app>
